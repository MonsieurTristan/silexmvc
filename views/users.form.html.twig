<h2>Formulaire</h2>

{% if user is defined %}
<form method="post" name="formulaire" action="{{ url('users.save', {id: user.id}) }}">

    <input type="hidden" name="id" value={{user.id}} />

    <label for="name">Nom : </label>
    <input type="text" name="nom" value={{user.nom}} />

    <label for="name">Prénom : </label>
    <input type="text" name="prenom" value={{user.prenom}}  />
    {% else %}
<form method="post" name="formulaire" action="{{ url('users.save') }}">
    <label for="name">Nom : </label>
    <input type="text" name="nom" />

    <label for="name">Prénom : </label>
    <input type="text" name="prenom" />
    {% endif %}
    <form method="post" name="formulaire" action="{{ url('users.save') }}">
      {% for computers in computer %}
      </br>
        <input type="checkbox" name ={{computers.id}}>
        <label for="name">{{computers.modele}}</label>
      {% endfor%}
    </form>
    <button type="submit">Envoyer</button>

</form>
